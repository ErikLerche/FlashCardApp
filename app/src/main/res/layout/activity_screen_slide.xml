<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScreenSlidePagerActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_weight="10">
        <Button
            android:id="@+id/previous_card_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight = "1"
            android:padding="0dp"
            android:background="#C2C5CC"
            android:onClick="goPrevious"
            />
        <Button
            android:id="@+id/card_text_button"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:text="sample"
            android:padding="0dp"
            android:background="#C2C5CC"
            android:onClick="flipCard"
            />
        <Button
            android:id="@+id/next_card_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight = "1"
            android:padding="0dp"
            android:background="#C2C5CC"
            android:onClick="goNext"
            />

    </LinearLayout>

    <ImageButton
        android:id="@+id/back_to_word_list_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@android:drawable/ic_menu_revert"
        android:background="#C2C5CC"
        android:onClick="backToWordList"/>
</LinearLayout>
