<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditCard">

    <TextView
        android:id="@+id/front_text_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/front"
        android:textSize="36sp"
        app:fontFamily="sans-serif"
        android:layout_marginTop="100sp"
        android:layout_marginLeft="20sp"
        android:layout_marginStart="20sp"/>

    <EditText
        android:id="@+id/first_edit_text2"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40sp"
        android:layout_marginStart="40sp"
        android:layout_below="@+id/front_text_view2" />

    <TextView
        android:id="@+id/back_text_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/front_text_view2"
        android:layout_alignLeft="@+id/front_text_view2"
        android:layout_below="@id/first_edit_text2"
        android:layout_marginTop="40sp"
        android:text="@string/back"
        android:textSize="36sp" />

    <EditText
        android:id="@+id/second_edit_text2"
        android:layout_width="248sp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/back_text_view2"
        android:layout_marginLeft="40sp"
        android:layout_marginStart="40sp"
        android:ems="10"
        android:inputType="text" />


        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/done_button2"
            android:onClick="changeCard"
            android:text="@string/done" />

</RelativeLayout>