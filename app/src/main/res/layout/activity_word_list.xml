<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WordListActivity">
    <Button
        android:id="@+id/quiz_generate"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:text="Generate Quiz"
        android:textSize="25sp"
        android:visibility="visible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100sp">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/addWordView">
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="startFlashCards"
            android:tint="@android:color/darker_gray"
            app:srcCompat="@android:drawable/ic_media_play" />

        <ImageButton
            android:id="@+id/addWordButton"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="addWord"
            android:tint="@android:color/darker_gray"
            app:srcCompat="@android:drawable/ic_input_add"/>

        <ImageButton
            android:id="@+id/shuffleListButton"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="shuffleWords"
            android:tint="@android:color/darker_gray"
            app:srcCompat="@android:drawable/ic_menu_rotate" />

    </LinearLayout>



</RelativeLayout>
